
.item {
    display: flex;
    justify-content: center;
}

.item .order {
    width: 85%;
    padding: 20rpx 40rpx;
    margin: 10rpx 0;
    border-radius: 30rpx;
    background-color: #ffffff;
    display: flex;
    flex-direction: column;
}

.order .order-title {
    width: 100%;
    height: 70rpx;
    display: flex;
    justify-content: space-between;
}

.order .order-title .titleText {
    width: 65%;
    color: #333333;
    font-size: 34rpx;
    font-weight: bold;
    height: 70rpx;
    line-height: 70rpx;
    /*溢出隐藏*/
    display: block;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.order .order-title .progress {
    height: 70rpx;
    font-size: 28rpx;
    font-weight: bold;
    line-height: 70rpx;
}

.order .order-title .zero {
    color: orange;
}

.order .order-title .one {
    color: dodgerblue;
}

.order .order-title .two {
    color: seagreen;
}

.order .order-title .four {
    color: #FF5D5D;
}

.order .order-title .three {
    color: #656565;
}

.order .order-body {
    font-size: 24rpx;
}

.order .order-body .order-body-text {
    margin: 4rpx 0;
}

.order .order-footer {
    width: 100%;
    height: 70rpx;
    display: flex;
    justify-content: space-between;
}

.order .order-footer .order-footer-button {
    /*color: #333333;*/
    height: 50rpx;
    margin: 10rpx 0;
    line-height: 50rpx;
    font-size: 22rpx;
    /*background-color: #f8f8f8;*/
}

.order .order-footer .order-footer-text {
    font-size: 28rpx;
    line-height: 70rpx;
}