<view class="item">
    <view class="order">
        <view class="order-title">
            <view class="titleText">{{title}}</view>
            <view class="progress {{color[progress + 2]}}">{{status[progress + 2]}}</view>
        </view>
        <view class="order-body">
            <view class="order-body-text time_start">发起时间：{{time_start}}</view>
            <view class="order-body-text time_distribution">审核时间：{{time_distribution}}</view>
            <view class="order-body-text solver">维修人员：{{solver}}</view>
            <view class="order-body-text time_end">完成时间：{{time_end}}</view>
            <view class="order-body-text more">查看详情>></view>
        </view>
    </view>
</view>