/* app.wxss */
@import "main.wxss";
@import "icon.wxss";

page {
    min-height: 100%;
}

.top {
    width: 100%;
    height: 135rpx;
    text-align:center;
    line-height: 180rpx;
    color: white;
    font-size:13px;
    font-weight:normal;
    background:linear-gradient(45deg, #0081ff, #1cbbb4);
}

/* 表单样式 start */
input {
    height: 80rpx;
    margin: 10rpx 0 10rpx;
    border: 3rpx solid #92c7ff;
    border-radius: 20rpx;
    box-shadow: rgba(150, 179, 205, 0.5) 5rpx 5rpx 15rpx;
}

.btn {
    color: white;
    margin: 20rpx 0 30rpx;
    height: 80rpx;
    line-height: 80rpx;
    background-color: #0069d9;
}

/* 表单样式 end */