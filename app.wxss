/* app.wxss */
@import "main.wxss";
@import "icon.wxss";

page {
    min-height: 100%;
}

.top {
    width: 100%;
    height: 135rpx;
    text-align: center;
    line-height: 180rpx;
    color: white;
    font-size: 13px;
    font-weight: normal;
    background: linear-gradient(45deg, #0081ff, #1cbbb4);
    position: sticky;
    top: 0;
    z-index: 2;
}

/* 表单样式 start */
input {
    height: 80rpx;
    margin: 10rpx 0 10rpx;
    border: 3rpx solid #e7e7e7;
    border-radius: 8px;
    background: #ffffff;
    box-shadow: 10px 10px 25px #d9d9d9,
    -10px -10px 25px #ffffff;
}

.btn {
    color: white;
    margin: 20rpx 0 30rpx;
    height: 80rpx;
    line-height: 80rpx;
    background-image: linear-gradient(45deg, #0081ff, #1cbbb4);
    border-radius: 20rpx;
    box-shadow: #dddddd 5rpx 5rpx 15rpx;
}

/* 表单样式 end */