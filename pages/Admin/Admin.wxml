<cu-custom bgColor="bg-gradual-blue" isBack="{{true}}">
</cu-custom>

<view class="top">管理员</view>
<view class="padding-tb-xl padding text-center" style="height: 360rpx;">
    <button wx:if='{{test>0}}' class='{{topNavBar.bgColor}} shadow'>
        <view class="padding-xl text-while">
            <view class="cu-avatar xl round" style="background-image:url({{user_info.avatar}});"></view>
            <view class="padding-xs text-xl">
                {{name}}
            </view>
        </view>
    </button>
    <button wx:else bindtap="toLogin" class='{{topNavBar.bgColor}} shadow'>
        <view class="padding-xl text-while">
            <view class="cu-avatar xl round" style="background-image:url(/static/icon/mine.png);"></view>
            <view class="padding-xs text-xl">
                登录
            </view>
        </view>
    </button>
</view>

<view class="cu-list menu card-menu">
    <view class="cu-item arrow" bindtap="picture">
        <text class="cuIcon-paint text-grey">   图片展示</text>
    </view>
    <view class="cu-item arrow" bindtap="order">
        <text class="cuIcon-tag text-grey">    工单展示</text>
    </view>
    <view class="cu-item arrow" bindtap="text">
        <text class="cuIcon-text text-grey">    文本展示</text>
    </view>
    <!--  测试用  -->
</view>