<view class="container">
    <view class="formContainer">
        <view class="formTitle">
            <view class="titleText">发起工单</view>
        </view>

        <view class="orderForm">

            <view class="form-item">
                <label>姓名</label>
                <input value="{{}}" type="text" id="name" disabled="true"></input>
            </view>

            <view class="form-item">
                <label>联系方式</label>
                <input value="" type="text" id="tel" maxlength="11" bindinput="handleInput"></input>
            </view>

            <view class="form-item">
                <label>网络类型</label>
                <radio-group bindchange="radioChange">
                    <label class="radio"><radio color="#0067AB" value="wire" checked="true"/>有线网络（宽带拨号）
                    </label>
                    <label class="radio"><radio color="#0067AB" value="wireless"/>无线网络（iHBUT）
                    </label>
                </radio-group>
            </view>

            <view class="form-item">
                <label>故障描述</label>
                <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
                    <view class="picker">
                        <input value="当前选择：{{array[index]}}" type="text" id="des"></input>
                    </view>
                </picker>
            </view>

            <view class="form-item">
                <label>预约维修时间</label>
                <picker mode="date" value="{{date}}" start="2021-11-20" end="2021-11-22" bindchange="bindDateChange">
                    <input value="{{date}}" type="text" id="type" disabled="true"></input>
                </picker>
                <picker mode="time" value="{{time}}" start="09:00" end="16:00" bindchange="bindTimeChange">
                    <input value="{{time}}" type="text" id="type" disabled="true"></input>
                </picker>
            </view>

            <button bindtap="submit">提交</button>
        </view>

    </view>
</view>