page{
    display: flex;
    flex-direction: column;
    height: 100%;
}

.head{
    width: 100%;
    height: 50rpx;
}
.navbar{
    flex: none;
    top: 100px;
    display: flex;
    background: #fff;
}
.navbar .item{
    position: relative;
    flex: auto;
    text-align: center;
    line-height: 80rpx;
}
.navbar .item.active{
    color: #0081ff;
}
.navbar .item.active:after{
    content: "";
    display: block;
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 4rpx;
    background: #1cbbb4;
}