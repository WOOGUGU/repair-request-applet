#Instruction {
    height: 100%;
    width: 100%;
    background-image: linear-gradient(45deg, #0081ff, #1cbbb4);
    position: absolute;
    display: flex;
    align-items: center;
    justify-content: center;
}

#InstructionContent {
    width: 80%;
    height: 85%;
    background-color: #ffffff;
    flex-direction: column;
}

#Title {
    height: 8%;
    color: #000000;
    background-color: #ffffff;
    text-align: center;
}

#Content {
    text-align: left;
}

