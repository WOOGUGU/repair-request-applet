#Instruction {
    height: 100%;
    width: 100%;
    background-color: #f1f1f1;
    position: absolute;
    display: flex;
    align-items: center;
    justify-content: center;
}

#InstructionContent {
    width: 80%;
    height: 85%;
    background-color: #ffffff;
    flex-direction: column;
    box-shadow: lightgrey 5px 5px 5px 0;
}

#Title {
    height: 8%;
    color: #000000;
    font-size: 35rpx;
    background-color: #ffffff;
    text-align: center;
}

#Content {
    text-align: left;
    font-size: 30rpx;
}