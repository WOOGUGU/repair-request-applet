/* 页面设置 start */
.container {
    width: 100%;
    height: 100%;
    position: fixed;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background-image: linear-gradient(180deg, #4e73df 10%, #224abe 100%);
}

/* 页面设置 end */

/* 登录框 start */
.loginContainer {
    width: 70%;
    height: 70%;
    border-radius: 20rpx;
    box-shadow: #dddddd 5rpx 5rpx 15rpx;
    background-color: #ffffff;
    display: flex;
    flex-direction: column;
    text-align: center;
}

.loginTitle {
    /*margin: auto 0;*/
}

.loginContainer .loginTitle .titleImg {
    text-align: center;
}

.loginContainer .loginTitle .titleImg image {
    width: 360rpx;
    height: 180rpx;
}

.loginContainer .loginTitle .titleText {
    font-size: 42rpx;
}

.loginForm {
    margin: auto;
    width: 80%;
}

.loginForm input {
    margin-top: 30rpx;
    border: 3rpx solid #92c7ff;
    border-radius: 20rpx;
    height: 80rpx;
    box-shadow: #96b3cd 5rpx 5rpx 5rpx;
}

.loginForm button {
    color: white;
    margin-top: 50rpx;
    background-color: #0069d9;
}

/* 登录框 end */