<cu-custom bgColor="{{topNavBar.bgColor}}" isBack="{{true}}">
    <view slot="backText">返回</view>
    <view slot="content">登录</view>
</cu-custom>
<view class="container">
    <view class="loginContainer">

    <view class="loginTitle">
            <view class="titleImg">
                <image src="/static/imgs/HBUT-all.svg"></image>
            </view>
            <view class="titleText">网络报修-登录</view>
        </view>

        <view class="loginForm">
            <input value="" type="text" id="username" maxlength="15" placeholder="学号/工号"
                   bindinput="handleInput"></input>
            <input value="" type="password" id="password" maxlength="15" placeholder="密码"
                   bindinput="handleInput"></input>
            <button class="btn" bindtap="submit">登录</button>
        </view>

    </view>
</view>