/* pages/opinion/opinion.wxss */

.opinion {
    width: 100%;
    height: 95%;
    position: fixed;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background-color: #f1f1f1;
}

.opinionContainer {
    width: 85%;
    height: 85%;
    border-radius: 20rpx;
    box-shadow: #dddddd 5rpx 5rpx 15rpx;
    background-color: #ffffff;
    display: flex;
    flex-direction: column;
    text-align: center;
}

.opinionTitle {
    margin-top: 50rpx;
}

.opinionContainer .loginTitle .titleText {
    font-size: 42rpx;
    margin-top: 30rpx;
}

.opinionForm {
    margin: auto;
    width: 80%;
}

.opinionForm textarea {
    text-align: left;
    margin-top: 30rpx;
    border: 3rpx solid #92c7ff;
    border-radius: 20rpx;
    height: 600rpx;
    width: 500rpx;
    box-shadow: rgba(150, 179, 205, 0.5) 5rpx 5rpx 15rpx;
}

.opinionForm input {
    text-align: left;
    margin-top: 30rpx;
    border: 3rpx solid #92c7ff;
    border-radius: 20rpx;
    height: 80rpx;
    width: 500rpx;
    box-shadow: rgba(150, 179, 205, 0.5) 5rpx 5rpx 15rpx;
}

.opinionForm button {
    color: white;
    margin-top: 50rpx;
    height: 80rpx;
    line-height: 80rpx;
    background-color: #0081ff;
}