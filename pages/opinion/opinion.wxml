<cu-custom bgColor="{{topNavBar.bgColor}}" isBack="{{true}}">
    <view slot="backText">返回</view>
</cu-custom>
<view class="opinion">
    <view class="opinionContainer">

        <view class="opinionTitle">
            <view class="titleText">意见反馈</view>
        </view>

        <view class="opinionForm">

            <view class="form-item">
                <textarea class="opinionTextarea" value="" type="text" id="opinion" maxlength="50"
                          placeholder="感谢您的宝贵意见！"
                          bindinput="handleInput"/>
            </view>

            <view class="form-item">
                <input class="opinionInput" value="" type="text" id="tel" maxlength="11" placeholder="联系方式（选填）"
                       bindinput="handleInput"/>
            </view>

            <button class="btn" bindtap="submit">提交</button>
        </view>
    </view>
</view>