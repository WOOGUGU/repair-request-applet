        <view class="nav">
            <view class="item {{current == 'all' ? 'active' : ''}}" bindtap="clickNavbar" id="all">全部</view>
            <view class="item {{current == '0' ? 'active' : ''}}" bindtap="clickNavbar" id="0">待审核</view>
