page {
    background-color: #f6f6f6;
}

.container {
    height: 100%;
    display: flex;
    flex-direction: column;
}

/* 导航栏 start */
.navbar {
    position: sticky;
    top: 0;
    z-index: 1000;
}

.nav {
    width: 100%;
    height: 80rpx;
    margin-bottom: 15rpx;
    background-color: #fafafa;
    /*border-bottom: 2rpx solid #666666;*/
    box-shadow: #999999 0rpx 0rpx 10rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
}

.nav .item {
    height: 60rpx;
    width: 25%;
    color: gray;
    font-size: 32rpx;
    font-weight: lighter;
    line-height: 60rpx;
    align-self: center;
    text-align: center;
}

.nav .active {
    color: #0067AB;
    font-weight: normal;
}

/* 导航栏 end */

.sendOrder {
    margin: 10rpx 0;
}

.sendOrder button {
    width: 90%;
    margin: 0 auto;
}

/* 工单展示 start */
.orders {
    width: 100%;
    display: flex;
    flex-direction: column;
}



.orders .item {
    display: flex;
    justify-content: center;
}

.orders .item .order {
    width: 85%;
    padding: 20rpx 40rpx;
    margin: 10rpx 0;
    border-radius: 30rpx;
    background-color: #ffffff;
    display: flex;
    flex-direction: column;
}

.order .order-title {
    width: 100%;
    height: 70rpx;
    display: flex;
    justify-content: space-between;
}

.order .order-title .titleText {
    width: 75%;
    color: #333333;
    font-size: 34rpx;
    font-weight: bold;
    margin-bottom: 10rpx;
    height: 70rpx;
    /*溢出隐藏*/
    display: block;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.order .order-title .progress {
    height: 70rpx;

}

.order .order-body {
    font-size: 24rpx;
}

.order .order-body .order-body-text {
    margin: 4rpx 0;
}

.order .order-body .more {
    font-size: 28rpx;
    text-align: right;
}

/* 工单展示 end */