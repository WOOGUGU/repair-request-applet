page {
    background-color: #f6f6f6;
}

.container {
    height: 100%;
    display: flex;
    flex-direction: column;
}

/* 导航栏 start */
.navbar {
    position: sticky;
    top: 135rpx;
    z-index: 3;
}

.nav {
    width: 100%;
    height: 80rpx;
    margin-bottom: 15rpx;
    background-color: #fafafa;
    /*border-bottom: 2rpx solid #666666;*/
    box-shadow: #999999 0rpx 0rpx 10rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
}

.nav .item {
    height: 60rpx;
    width: 25%;
    color: gray;
    font-size: 32rpx;
    font-weight: lighter;
    line-height: 60rpx;
    align-self: center;
    text-align: center;
}

.nav .active {
    color: #0067AB;
    font-weight: normal;
}

/* 导航栏 end */

.sendOrder {
    margin: 10rpx 0;
}

.sendOrder button {
    width: 90%;
    font-size: 32rpx;
    margin: 0 auto;
}

/* 工单展示 start */
.orders {
    width: 100%;
    display: flex;
    flex-direction: column-reverse;
}

/* 工单展示 end */