<cu-custom bgColor="bg-gradual-blue" isBack="{{true}}">
    <view slot="backText">返回</view>
</cu-custom>
<view class="container">
    <view class="order">
        <view class="order-title">
            <view class="title-text">{{orderData.position + '-' + orderData.des}}</view>
            <view class="progress {{color[orderData.progress + 2]}}">{{status[orderData.progress + 2]}}</view>
        </view>
        <view class="order-body">
            <view class="order-body-text type">网络类型：{{orderData.type == 'wire' ? '有线网络' : '无线网络'}}</view>
            <view class="order-body-text time_subscribe">预约上门时间：{{orderData.timeSubscribe}}</view>
            <view class="order-body-text sender">发起者：{{orderData.sender}}</view>
            <view class="order-body-text tel">联系方式：{{orderData.tel}}</view>
            <view class="order-body-text solver">维修人员：{{orderData.solver == null ? '待分配' : orderData.solver}}</view>
        </view>
        <view class="order-body">
            <view class="order-body-text time_start">工单发起时间：{{orderData.timeStart}}</view>
            <view wx:if="{{orderData.timeDistribution != null}}" class="order-body-text time_distribution">
                工单审核时间：{{orderData.timeDistribution}}
            </view>
            <view wx:if="{{orderData.timeEnd != null}}" class="order-body-text time_end">工单完成时间：{{orderData.timeEnd}}
            </view>
            <view wx:if="{{orderData.progress == 2}}" class="order-body-text feedback">
                评价状态：{{orderData.feedback == null ? '未评价' : '已评价'}}
            </view>
        </view>
    </view>
</view>
<view class="feedback_">
    <view wx:if="{{orderData.progress == 2 && orderData.feedback == null}}" class="feedback_submission">
        <view class="feedback_title">
            <view class="title-text">提交评价</view>
        </view>
        <view class="form-item">
            <input class="input-higher" value="" placeholder="" type="text" id="feedback"
                   bindinput="handleInput"></input>
        </view>
        <view class="feedback_btn">
            <button class="btn" bindtap="addFeedback">提交</button>
        </view>
    </view>
</view>