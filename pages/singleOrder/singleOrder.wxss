page {
    background-color: #f6f6f6;
}

.container {
    margin-top: 40rpx;
    padding: 0 20rpx;
    position: absolute;
    display: flex;
    align-items: center;
    justify-content: center;
}

.order {
    margin-top: 40px;
    width: 680rpx;
    height: 420rpx;
    padding: 20rpx;
    border-radius: 15px;
    background: #ffffff;
    box-shadow: 6px 6px 12px #cad1d5,
    -6px -6px 12px #ffffff;
}

.order-title {
    width: 100%;
    height: 80rpx;
    display: flex;
    justify-content: space-between;
}

.order-title .title-text {
    width: 65%;
    color: #333333;
    font-size: 34rpx;
    font-weight: bold;
    height: 80rpx;
    line-height: 80rpx;
    /*溢出隐藏*/
    display: block;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.order .order-title .progress {
    height: 80rpx;
    font-size: 28rpx;
    font-weight: bold;
    line-height: 80rpx;
}

.order .order-title ._two {
    color: red;
}

.order .order-title ._one {
    color: #656565;
}

.order .order-title .zero {
    color: orange;
}

.order .order-title .one {
    color: dodgerblue;
}

.order .order-title .two {
    color: seagreen;
}

.order .order-body {
    font-size: 28rpx;
    padding-top: 15rpx;
}

.order .order-body .order-body-text {
    margin: 4rpx 0;
    line-height: 38rpx;
}

.feedback_ {
    margin-top: 320px;
    padding: 20rpx;
    position: absolute;
    display: flex;
    align-items: center;
    justify-content: center;
}

.feedback_submission {
    margin: 15rpx 0;
    padding: 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    width: 680rpx;
    height: 540rpx;
    border-radius: 15px;
    background: #ffffff;
    box-shadow: 6px 6px 12px #cad1d5,
    -6px -6px 12px #ffffff;
}

.feedback_submission .feedback_title {
    align-self: center;
    width: 100%;
    height: 100rpx;
    display: flex;
    justify-content: center;
    font-size: 34rpx;
    font-weight: bold;
}

.feedback_submission .feedback_title .title-text {
    line-height: 100rpx;
}

.feedback_submission .form-item textarea {
    text-align: left;
    margin: 10px;
    border-radius: 20rpx;
    border: 3rpx solid #e7e7e7;
    height: 300rpx;
    width: 95%;
}

.feedback_submission .feedback_btn {
    align-self: center;
    width: 80%;
}