@import '/static/icon/font-awesome.wxss';

page {
    background-color: #f6f6f6;
}

.container {
    width: 100%;
    margin-top: 80rpx;
    position: absolute;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.order {
    margin-top: 40rpx;
    width: 85%;
    padding: 20rpx;
    border-radius: 15px;
    display: flex;
    flex-direction: column;
    background: #ffffff;
    box-shadow: 6px 6px 12px #cad1d5, -6px -6px 12px #ffffff;
}

.order-title {
    width: 100%;
    /*height: 80rpx;*/
    display: flex;
    justify-content: space-between;
}

.order-title .title-text {
    /*width: 100%;*/
    color: #333333;
    font-size: 34rpx;
    font-weight: bold;
    /*height: 80rpx;*/
    line-height: 80rpx;
    /*溢出隐藏*/
    /*display: block;*/
    /*white-space: nowrap;*/
    /*overflow: hidden;*/
    /*text-overflow: ellipsis;*/
}

.order .order-title .progress {
    height: 80rpx;
    font-size: 28rpx;
    font-weight: bold;
    line-height: 80rpx;
}

.order .zero {
    color: #FFA500;
}

.order .one {
    color: #1E90FF;
}

.order .two {
    color: #2E8B57;
}

.order .three {
    color: #656565;
}

.order .four {
    color: #FF5D5D;
}

.order .progress-box {
    margin: 30rpx 10rpx;
}

.order .progress-ps {
    margin-top: 10rpx;
    display: flex;
    justify-content: space-between;
}

.order .progress-text {
    font-size: 28rpx;
    font-weight: bold;
}

.order .order-body {
    font-size: 28rpx;
    padding-top: 15rpx;
}

.order .order-body .order-body-text {
    margin: 4rpx 0;
    line-height: 38rpx;
}

.order-options {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.order-options .finish_btn {
    align-self: center;
    width: 80%;
}

.feedback_ {
    margin-top: 40rpx;
    width: 85%;
    padding: 20rpx;
    border-radius: 15px;
    background: #ffffff;
    box-shadow: 6px 6px 12px #cad1d5, -6px -6px 12px #ffffff;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.feedback_ .feedback_title {
    width: 100%;
    height: 80rpx;
    display: flex;
    align-self: center;
    justify-content: center;
    font-size: 34rpx;
    font-weight: bold;
}

.feedback_ .feedback_title .title-text {
    line-height: 80rpx;
}

.feedback_ .form-item {
    width: 100%;
    display: flex;
}

.feedback_ .star-item {
    width: 100%;
    display: flex;
    justify-content: center;
}

.feedback_ .star-item .star {
    padding: 10rpx 12rpx;
    font-size: 48rpx;
    color: gold;
}

.feedback_ .form-item textarea {
    padding: 20rpx;
    align-self: center;
    text-align: left;
    border-radius: 20rpx;
    border: 3rpx solid #e7e7e7;
    height: 220rpx;
    width: 100%;
}

.feedback_ .feedback_btn {
    align-self: center;
    width: 80%;
}