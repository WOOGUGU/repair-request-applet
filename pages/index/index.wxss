/**index.wxss**/
page {
    background-color: #f8f8f8;
}

.indexContainer {
    display: flex;
    flex-direction: column;
    height: 100%;
}

/* 轮播 start */
.banners {
    width: 100%;
    height: 56.25vw;
}

.banners .slide-img-item {
    width: 100%;
    height: 100%;
}

.article {
    padding: 0 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.article .article-item {
    /*height: 400rpx;*/
    margin-top: 20rpx;
    border-radius: 8rpx;
    background-color: #fff;
}

.article .article-cover {
    width: 100%;
    padding-bottom: 42.55%;
    height: 0;
    position: relative;
    /*height: 280rpx;*/
    /*height: auto;*/
}

.article .article-cover-image {
    width: 100%;
    height: 100%;
    position: absolute;
}

.article .article-info {
    padding: 10rpx 20rpx;
}

.article .article-title {
    font-size: 36rpx;
    margin: 8rpx 0;
    color: #333;
}

.article .article-other {
    display: flex;
    justify-content: space-between;
    line-height: 30rpx;
    font-size: 28rpx;
    margin: 8rpx 0;
    color: #666;
}

.article .article-desc {
    width: 70%;
    /*溢出隐藏*/
    display: block;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.article .article-time {
    width: 25%;
    text-align: right;
}
