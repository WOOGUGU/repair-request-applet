<!--pages/index/index.wxml-->
<view class="top">主页</view>

<view class="indexContainer">

    <swiper class="banners" indicator-dots
            indicator-color="#C6EDFF"
            indicator-active-color="#0088E2"
            autoplay="true" interval="3000">
        <swiper-item>
            <image src="/static/imgs/1.png"></image>
        </swiper-item>
        <swiper-item>
            <image src="/static/imgs/2.png"></image>
        </swiper-item>
        <swiper-item>
            <image src="/static/imgs/3.png"></image>
        </swiper-item>
    </swiper>

    <!-- 推荐列表 -->
    <view class="lists">

        <view class="news" bindtap="toDetail">
            <view class="content">
                <view class='imgitem'>
                    <image class='imgitem' mode="widthFit" src="/static/imgs/gonggao.png"></image>
                </view>
                <view class="title">公告</view>
                <view class="bottom">
                    <view class="icon">
                        2021-1-19
                    </view>
                </view>
                <view class="detail">
                    公告就是公告
                </view>
            </view>
        </view>

        <view class="news" bindtap="toDetail">
            <view class="content">
                <view class='imgitem'>
                    <image class='imgitem' mode="widthFit" src="/static/imgs/3.png"></image>
                </view>
                <view class="title">使用指南</view>
                <view class="bottom">
                    <view class="icon">
                        2022-1-19
                    </view>
                </view>
                <view class="detail">
                    看了也不会用
                </view>
            </view>
        </view>

        <view class="news" bindtap="toDetail">
            <view class="content">
                <view class='imgitem'>
                    <image class='imgitem' mode="widthFit" src="/static/imgs/problem.png"></image>
                </view>
                <view class="title">常见问题及解决方案</view>
                <view class="bottom">
                    <view class="icon">
                        2022-1-19
                    </view>
                </view>
                <view class="detail">
                    没方案
                </view>
            </view>
        </view>
    </view>
    <!-- 底部 -->
</view>