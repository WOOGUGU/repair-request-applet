<!--pages/index/index.wxml-->
<view class="top">主页</view>

<view class="indexContainer">

    <swiper class="banners" indicator-dots
            indicator-color="#C6EDFF"
            indicator-active-color="#0088E2"
            autoplay="true" interval="3000">
        <swiper-item wx:for="{{slideData}}">
            <image class="slide-img-item" src="{{item.imgPath}}"></image>
        </swiper-item>
        <swiper-item>
            <image class="slide-img-item" src="/static/imgs/a.png"></image>
        </swiper-item>
        <swiper-item>
            <image class="slide-img-item" src="/static/imgs/c.png"></image>
        </swiper-item>
        <swiper-item>
            <image class="slide-img-item" src="/static/imgs/gonggao.png"></image>
        </swiper-item>
    </swiper>

    <!-- 推荐列表 -->
    <view class="lists">
        <!--        <view class="news" bindtap="jump_2">-->
        <view class="news">
            <view class="content">
                <view class='imgitem'>
                    <image class='imgitem' mode="widthFit" src="/static/imgs/gonggao.png"></image>
                </view>
                <view class="title">公告</view>
                <view class="bottom">
                    <view class="icon">
                        2021-1-19
                    </view>
                </view>
                <view class="detail">
                    公告就是公告
                </view>
            </view>
        </view>
        <!--        <view class="news" bindtap="jump_1">-->
        <view class="news">
            <view class="content">
                <view class='imgitem'>
                    <image class='imgitem' mode="widthFit" src="/static/imgs/problem.png"></image>
                </view>
                <view class="title">使用指南</view>
                <view class="bottom">
                    <view class="icon">
                        2022-1-19
                    </view>
                </view>
                <view class="detail">
                    校园网常见问题及解决方案
                </view>
            </view>
        </view>
    </view>
    <!-- 底部 -->
</view>