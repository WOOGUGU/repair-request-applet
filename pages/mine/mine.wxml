<view class="padding-tb-xl padding text-center user">
    <button class="shadow bg" bindtap="{{isLogin ? '' : 'toLogin'}}">
        <view class="padding-xl text-while">
            <view class="cu-avatar xl round">
                <image class="avatar" src="/static/icon/mine.png"></image>
            </view>
            <view class="padding-xs text-xl username-text">{{isLogin ? username : '登录'}}</view>
        </view>
    </button>
</view>

<view class="cu-list menu card-menu">
    <view class="cu-item arrow" bindtap="toOpinion">
        <view class="content menu-text" hover-class="none">
            <text class="cuIcon-community text-blue"></text>
            <text class="text-grey">意见反馈</text>
        </view>
    </view>
    <view class="cu-item arrow" bindtap="toAbout">
        <view class="content menu-text" hover-class="none">
            <text class="cuIcon-info text-blue"></text>
            <text class="text-grey">关于我们</text>
        </view>
    </view>
</view>

<view class="cu-list menu card-menu">
    <view class="cu-item arrow" bindtap="toExit">
        <view class="content menu-text" hover-class="none">
            <text class="cuIcon-close text-blue"></text>
            <text class="text-grey">退出</text>
        </view>
    </view>
</view>