/* pages/index/index.wxss */
page {
    background-color: #f8f8f8;
}

.indexContainer {
    display: flex;
    flex-direction: column;
    height: 100%;
}

/* 轮播 start */
.banners {
    width: 100%;
    height: 56.25vw;
}

.banners image {
    width: 100%;
    height: 100%;
}

/* 轮播 end */
.card-area {
    display: flex;
    flex-direction: column;
    margin-top: 15rpx;
    padding: 0 20rpx;
}

.card-area .card {
    margin: 15rpx 0;
    padding: 20rpx;
    border-radius: 10rpx;
    background-color: #ffffff;
}

.card .card-title {
    display: flex;
    justify-content: center;
}

.card .card-title .title-text {
    margin: 15rpx 0;
    font-size: 30rpx;
    font-weight: bold;
}

.card .card-body {
    padding-left: 30rpx;
}

.card .card-body .listItems {
    display: flex;
}

.card .card-body .item {
    font-size: 30rpx;
    margin: 10rpx 0;
    /*溢出隐藏*/
    display: block;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.card .card-footer {
    display: flex;
    justify-content: flex-end;
}

.card .card-footer .footer-text {
    font-size: 28rpx;
    margin: 15rpx 0;
    padding-right: 30rpx;
}